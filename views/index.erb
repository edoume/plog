<form action="/" method="post">
<label for="name">Choose Player</label>
	<select name="log[name]" id="name">
		<option value="Mathieu">Mathieu</option>
		<option value="Édouard">Édouard</option>
	</select>
	<input type="text" name="log[body]" placeholder="Votre contenu">
	<input type="submit">
</form>


<h2>Vos logs</h2>
<% @logs.each do |log| %>
  <h4><%= log.name %></h4>
  <p><%= log.body %></p>
<% end %>